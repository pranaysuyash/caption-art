{
  "name": "caption-art",
  "version": "1.0.0",
  "description": "AI-Powered Social Media Content Creation Platform",
  "scripts": {
    "verify-fixes": "node scripts/verify-fixes.js",
    "install-all": "npm install && cd frontend && npm install && cd ../backend && npm install",
